<%- include('../partials/header') %>

<h2>List of All Books</h2>

<a href="/books/new" class="btn btn-primary">Add New Book</a>

<% if(books.length === 0) { %>
  <h1>No Books Found</h1>
<% } else { %>
    <table>
      <thead>
        <tr>
          <th>Book Title</th>
          <th>Author</th>
          <th>View</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><a href="/books/<%= book._id %>" class="btn btn-primary">View</a></td>
            <td> <a href="/books/<%= book._id %>/edit" class="btn">Edit</a></td>
            <td><a href="/books/<%= book._id %>/delete" class="btn btn-danger">Delete</a></td>
          </tr>
        <% }) %>
      </tbody>      
    </table>
  <% } %>

<%- include('../partials/footer') %>

